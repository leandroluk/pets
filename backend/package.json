{
  "name": "pets-backend",
  "version": "1.0.0",
  "description": "Serverless backend usign Clean Code, SOLID & DDD",
  "main": "serverless.ts",
  "license": "MIT",
  "author": {
    "email": "leandroluk@gmail.com",
    "name": "Leandro Santiago Gomes",
    "url": "https://www.linkedin.com/in/leandroluk"
  },
  "scripts": {
    "start": "sls offline start",
    "dev": "rimraf .esbuild && nodemon --watch src --watch serverless.ts --ext ts --exec \"sls offline start\"",
    "deploy:staging": "sls deploy --aws-profile personal --stage staging",
    "deploy:production": "sls deploy --aws-profile personal --stage production",
    "test": "jest --passWithNoTests --runInBand --detectOpenHandles --silent --noStackTrace",
    "test:verbose": "jest --passWithNoTests --runInBand --detectOpenHandles --verbose",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "test:unit": "npm run test -- -c jest.unit.config.ts",
    "test:integration": "npm run test -- -c jest.integration.config.ts",
    "compose": "docker-compose down --remove-orphans && docker-compose up",
    "compose:d": "npm run compose -- -d",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "dependencies": {
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "helmet": "^6.0.0",
    "joi": "^17.6.0",
    "mongodb": "^4.9.0",
    "serverless-http": "^3.0.2",
    "winston": "^3.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.1",
    "@commitlint/config-conventional": "^17.1.0",
    "@jest/types": "^28.1.3",
    "@serverless/typescript": "^3.21.0",
    "@shelf/jest-mongodb": "^4.1.0",
    "@types/aws-lambda": "^8.10.102",
    "@types/express": "^4.17.13",
    "@types/express-winston": "^4.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@types/supertest": "^2.0.12",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "commitizen": "^4.2.5",
    "commitlint": "^17.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "serverless": "^3.22.0",
    "serverless-esbuild": "^1.32.8",
    "serverless-offline": "^9.2.6",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}